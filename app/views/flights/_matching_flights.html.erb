<%= turbo_frame_tag "matching_flights" do %>
  <%= "No matching flights" if matching_flights.empty? %>

  <ul>
    <% matching_flights.each do |flight| %>
      <li>
        <div>Flight number: <%= flight.id %></div>
        <div>Depart: <%= flight.departure_airport.code %></div>
        <div>Arrive: <%= flight.arrival_airport.code %></div>
        <div>Date: <%= flight.start.strftime("%F") %></div>
        <div>Departs at: <%= flight.start.strftime("%I:%M%p") %></div>
        <div>Duration: <%= flight.duration.inspect %></div>
      </li>
    <% end %>
  </ul>
<% end %>
