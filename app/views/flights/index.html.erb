<%= form_with url: "", method: :get do |form| %>
  <div>
    <%= form.label :departure_code %>
    <%= form.select :departure_code, @flights.departure_codes %>
  </div>
  <div>
    <%= form.label :arrival_code %>
    <%= form.select :arrival_code, @flights.arrival_codes %>
  </div>
  <div>
    <%= form.label :num_tickets %>
    <%= form.select :num_tickets, (1..4).to_a %>
  </div>
  <div>
    <%= form.label :date %>
    <%= form.select :date, @flights.distinct_depart_dates %>
  </div>
  <%= form.submit "Search" %>
<% end %>
